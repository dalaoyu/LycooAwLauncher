<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MenuDialogStyle" parent="@style/DialogStyle">
        <item name="android:windowBackground">@drawable/bg_desktop_item_menu_dialog</item>
    </style>

    <style name="DesktopItemMenuItemStyle" parent="Focusable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_menu_dialog_button_height</item>
        <item name="android:background">@drawable/bg_desktop_item_menu_item</item>
        <item name="android:textSize">@dimen/app_menu_dialog_button_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">@dimen/app_menu_dialog_item_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/app_menu_dialog_item_margin_bottom</item>
    </style>

    <style name="DesktopItemMenuItemIconStyle" parent="UnFocusable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/app_menu_dialog_icon_margin_left</item>
    </style>

    <style name="DesktopItemMenuItemLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_menu_dialog_button_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">@dimen/app_menu_dialog_label_margin_left</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="DesktopItemMenuDialogAnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/right_enter</item>
        <item name="android:windowExitAnimation">@anim/right_exit</item>
    </style>

    <style name="AppsDialogStyle" parent="@style/DialogStyle">
        <item name="android:windowBackground">@drawable/bg_apps_dialog</item>
    </style>

    <style name="DanceItemsDialogAnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/left_enter</item>
        <item name="android:windowExitAnimation">@anim/left_exit</item>
    </style>

    <style name="DanceSearchDialogAnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/up_enter</item>
        <item name="android:windowExitAnimation">@anim/up_exit</item>
    </style>

    <style name="AppsDialogAnimationLRStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/left_enter</item>
        <item name="android:windowExitAnimation">@anim/left_exit</item>
    </style>

    <!-- GridView -->
    <style name="GridViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/gridview_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/gridview_margin_left</item>
        <item name="android:layout_marginRight">@dimen/gridview_margin_right</item>
        <item name="android:layout_marginTop">@dimen/gridview_margin_top</item>
        <item name="android:horizontalSpacing">@dimen/gridview_horizontal_spacing</item>
        <item name="android:verticalSpacing">@dimen/gridview_vertical_spacing</item>
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@drawable/selector_apps</item>
    </style>

    <!-- Base Selection Dialog -->
    <style name="SelectionDialogAnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/alpha_enter</item>
        <item name="android:windowExitAnimation">@anim/alpha_exit</item>
    </style>

</resources>