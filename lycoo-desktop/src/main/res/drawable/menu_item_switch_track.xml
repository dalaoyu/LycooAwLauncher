<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size
                android:height="@dimen/menu_item_switch_track_height"/>

            <corners
                android:radius="@dimen/menu_item_switch_track_corners_radius"/>

            <solid
                android:color="@color/menu_item_switch_checked"/>

            <stroke
                android:width="@dimen/menu_item_switch_track_stroke_width"
                android:color="@color/menu_item_switch_checked"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <size
                android:height="@dimen/menu_item_switch_track_height"/>

            <corners
                android:radius="@dimen/menu_item_switch_track_corners_radius"/>

            <solid
                android:color="@color/menu_item_switch_normal"/>

            <stroke
                android:width="@dimen/menu_item_switch_track_stroke_width"
                android:color="@color/menu_item_switch_normal"/>
        </shape>
    </item>
</selector>