<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"
          android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/>

            <stroke
                android:width="@dimen/item_border_stroke"
                android:color="@color/item_border_focused"/>

            <padding
                android:bottom="@dimen/item_border_padding"
                android:left="@dimen/item_border_padding"
                android:right="@dimen/item_border_padding"
                android:top="@dimen/item_border_padding"/>
        </shape>
    </item>

    <item android:state_focused="true"
          android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/>

            <stroke
                android:width="@dimen/item_border_stroke"
                android:color="@color/item_border_focused"/>

            <padding
                android:bottom="@dimen/item_border_padding"
                android:left="@dimen/item_border_padding"
                android:right="@dimen/item_border_padding"
                android:top="@dimen/item_border_padding"/>
        </shape>
    </item>

    <item android:state_focused="false"
          android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/>

            <stroke
                android:width="@dimen/item_border_stroke"
                android:color="@color/item_border_focused"/>

            <padding
                android:bottom="@dimen/item_border_padding"
                android:left="@dimen/item_border_padding"
                android:right="@dimen/item_border_padding"
                android:top="@dimen/item_border_padding"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</selector>
