<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/header_padding_left"
                android:paddingRight="@dimen/header_padding_right"
                tools:ignore="RtlHardcoded">

    <!--
    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="@dimen/header_icon_size"
        android:layout_height="@dimen/header_icon_size"
        android:layout_centerVertical="true"
        android:background="@drawable/common_bg_icon"
        android:scaleType="centerInside"
        android:src="@drawable/ic_header_back"
        tools:ignore="RtlHardcoded"/>
        -->

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:textColor="@color/c_def_textview"
        android:textSize="@dimen/header_label_text_size"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_download_list"
            android:layout_width="@dimen/header_icon_size"
            android:layout_height="@dimen/header_icon_size"
            android:layout_marginRight="@dimen/header_icon_horizontal_space"
            android:background="@drawable/common_bg_icon"
            android:focusableInTouchMode="false"
            android:scaleType="centerInside"
            android:src="@drawable/ic_header_download"
            android:visibility="gone"
            tools:ignore="RtlHardcoded"/>

        <ImageButton
            android:id="@+id/ib_menu"
            android:layout_width="@dimen/header_icon_size"
            android:layout_height="@dimen/header_icon_size"
            android:background="@drawable/common_bg_icon"
            android:scaleType="centerInside"
            android:src="@drawable/ic_header_menu"
            android:visibility="gone"
            tools:ignore="RtlHardcoded"/>

        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:ignore="RtlHardcoded">

            <ImageButton
                android:id="@+id/ib_delete"
                android:layout_width="@dimen/header_icon_size"
                android:layout_height="@dimen/header_icon_size"
                android:background="@drawable/common_bg_icon"
                android:src="@drawable/ic_header_delete"
                />

            <ImageButton
                android:id="@+id/ib_cancel"
                android:layout_width="@dimen/header_icon_size"
                android:layout_height="@dimen/header_icon_size"
                android:layout_marginLeft="@dimen/header_icon_horizontal_space"
                android:background="@drawable/common_bg_icon"
                android:src="@drawable/ic_header_cancel"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>