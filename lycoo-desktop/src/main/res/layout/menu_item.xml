<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/menu_item_padding_left"
    android:paddingRight="@dimen/menu_item_padding_right"
    tools:ignore="RtlHardcoded">

    <!--
    android:background="@color/menu_item_bg"
    -->

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/menu_item_icon_size"
        android:layout_height="@dimen/menu_item_icon_size"
        android:background="@drawable/bg_menu_item_icon"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="@dimen/menu_item_icon_padding"
        android:scaleType="centerInside"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/menu_item_title_margin_left"
        android:layout_weight="2"
        android:duplicateParentState="true"
        android:textColor="@color/menu_item_text_color"
        android:textSize="@dimen/menu_item_title_size"
        tools:ignore="RtlHardcoded" />

    <FrameLayout
        android:id="@+id/control_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:duplicateParentState="true" />

</LinearLayout>